{
  "compilerOptions": {
    "allowSyntheticDefaultImports": true,
    "declaration": true,
    "esModuleInterop": true,
    "jsx": "react-jsx",
    "lib": ["ES5", "ES2015", "ES2016", "DOM", "ESNext"],
    "types": ["node", "react", "jest", "@testing-library/jest-dom"],
    "module": "es2015",
    "moduleResolution": "node",
    "noImplicitAny": true,
    "noUnusedLocals": true,
    "outDir": "dist/esm",
    "sourceMap": true,
    "strict": true,
    "noEmit": false,
    "target": "ES6"
  },
  "include": ["src/**/*.ts", "src/**/*.tsx", "./.storybook/**/*.tsx"]
}
